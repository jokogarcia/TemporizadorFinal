<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="TemporizadorFinal.Views.BluetoothTestPage">
    <StackLayout>
        <Button Text="GetStatus" Command="{Binding GetStatus}"></Button>
        <Label Text="{Binding CurrentStatus}"/>
        <Button Text="List Devices" Command="{Binding ListDevices}"></Button>
        <ListView ItemsSource="{Binding DevicesList}"/>
    </StackLayout>
</ContentPage>