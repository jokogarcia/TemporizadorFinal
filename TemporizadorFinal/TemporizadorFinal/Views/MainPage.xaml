<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemporizadorFinal.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="{Binding CurrentTimerDisplay}" HorizontalOptions="Center" FontSize="Large" />
        <Label Text="{Binding IterationDisplay}" HorizontalOptions="Center" FontSize="Medium" />
        <StackLayout Orientation="Horizontal">
            <Button Text="{Binding ButtonText}" Command="{Binding StartStopCommand}"/>
            <Button Text="Reset" Command="{Binding ResetCommand}"/>
        </StackLayout>
        
    </StackLayout>

</ContentPage>